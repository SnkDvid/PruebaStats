
    
    <script>
        // Función para mostrar la barra de progreso
        function showProgress() {
            $('#loading-bar').show();
            let progress = 0;
            const interval = setInterval(() => {
                progress += 10;
                if (progress <= 90) {
                    $('.progress-bar').css('width', progress + '%');
                    $('.progress-bar').attr('aria-valuenow', progress);
                }
            }, 100);
            return interval;
        }

        // Función para completar la barra de progreso
        function completeProgress(interval) {
            clearInterval(interval);
            $('.progress-bar').css('width', '100%');
            $('.progress-bar').attr('aria-valuenow', 100);
            setTimeout(() => {
                $('#loading-bar').hide();
                $('.progress-bar').css('width', '0%');
                $('.progress-bar').attr('aria-valuenow', 0);
            }, 500);
        }

        $(document).ready(function() {
            // Código existente de DataTables...

            // Para el formulario de edición
            $('#formEditarCliente').on('submit', function(e) {
                e.preventDefault();
                const progressInterval = showProgress();
                var formData = $(this).serialize();
                var clienteId = $('#clienteId').val();

                $.ajax({
                    url: '/clientes/' + clienteId + '/actualizar',
                    method: 'POST',
                    data: formData,
                    success: function(response) {
                        completeProgress(progressInterval);
                        $('#modalEditarCliente').modal('hide');
                        location.reload();
                    },
                    error: function() {
                        completeProgress(progressInterval);
                        alert('Ocurrió un error al procesar la solicitud');
                    }
                });
            });

            // Para los botones de activar/desactivar
            $('.btn-inverse-danger, .btn-inverse-primary').click(function(e) {
                e.preventDefault();
                const progressInterval = showProgress();
                const url = $(this).attr('href');

                $.ajax({
                    url: url,
                    method: 'GET',
                    success: function(response) {
                        completeProgress(progressInterval);
                        location.reload();
                    },
                    error: function() {
                        completeProgress(progressInterval);
                        alert('Ocurrió un error al procesar la solicitud');
                    }
                });
            });

            // Para el botón de eliminar
            $('.btn-gradient-danger').click(function(e) {
                e.preventDefault();
                if (confirm('¿Estás seguro de que deseas eliminar este cliente?')) {
                    const progressInterval = showProgress();
                    const url = $(this).attr('href');

                    $.ajax({
                        url: url,
                        method: 'GET',
                        success: function(response) {
                            completeProgress(progressInterval);
                            location.reload();
                        },
                        error: function() {
                            completeProgress(progressInterval);
                            alert('Ocurrió un error al eliminar el cliente');
                        }
                    });
                }
            });
        });
    </script>
